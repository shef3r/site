---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body style="height: calc(100% - 40px); display:flex; flex-direction:column;">
		<Header title={SITE_TITLE} />
		<main>
			<h1>projects</h1>
			<div class="projectgrid">
				<div class="projectframe">
					<div><h2>Translate</h2>
					<p>a Google Translate client for Windows 10/11 (and WP8.1)</p></div>
					<div class="tags">
						<a class="tag gh" href="https://github.com/shef3r/Translate">GitHub</a>
						<a class="tag" style="color:lightblue; border-color: lightblue;" href="https://t.me/TranslateUpdates">TG Updates</a>
						<a class="tag" style="color:greenyellow; border-color: greenyellow;">Public</a>
						<a class="tag" style="color:gray; border-color: gray;">UWP</a>
						<a class="tag" style="color:gray; border-color: gray;">Silverlight</a>
					</div>
				</div>
				<div class="projectframe">
					<div><h2>foresky</h2>
						<p>an open-source fluent weather app for windows 10+</p></div>
						<div class="tags">
							<a class="tag gh" href="https://github.com/shef3r/foresky">GitHub</a>
							<a class="tag" style="color:greenyellow; border-color: greenyellow;">Public</a>
							<a class="tag" style="color:gray; border-color: gray;">UWP</a>
							<a class="tag" style="color:gray; border-color: gray;">In Progress</a>
						</div>
				</div>
				<div class="projectframe">
					<div><h2>ferrpad</h2>
						<p>a UWP text editor for Windows 10/11! (mostly functional)</p></div>
						<div class="tags" style="justify-content:center; gap:8px;">
							<a class="tag gh" href="https://github.com/shef3r/ferrpad">GitHub</a>
							<a class="tag" style="color:greenyellow; border-color: greenyellow;">Public</a>
							<a class="tag" style="color:gray; border-color: gray;">UWP</a>
						</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
